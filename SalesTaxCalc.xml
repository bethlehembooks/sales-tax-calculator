    <!-- Begin
    function  doMath() {
    var one = eval(document.myform.total.value)
    var two = eval(document.myform.salestax.value)
    var prod = one  *   two
    document.myform.salestaxamount.value=custRound(prod,2);
	document.myform.grandtotal.value=custRound(prod+one,2);
    }
    function custRound(x,places) {
    return (Math.round(x*Math.pow(10,places)))/Math.pow(10,places)
    }
    //  End -->
    </script>
